<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Sign up</h1>

        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="field1">Username:</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Password:</label>
                <input name="password" type="password" class="form-control" id="field2">
                <small class="form-text text-muted">Never share your password</small>
            </div>
            <div class="form-group">
                <label for="picture">Choose a profile picture:</label>

                <input type="file" id="picture" name="picture" accept="image/png, image/jpeg">
            </div>
            <div class="form-group">
                <p>Sex:</p>
                <input type="radio" id="male" name="sex" value="male">
                <label for="male">Male</label><br>
                <input type="radio" id="female" name="sex" value="female">
                <label for="female">Female</label><br>
            </div>
            <div class="form-group">
                <label for="idealweight">Target weight in kg:</label>
                <input type="number" id="idealweight" name="idealweight">
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Sign up</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>Do you have an account? <a href="/login">Log in!</a></p>
    </div>
</div>