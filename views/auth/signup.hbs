<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Sign up</h1>

        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="field1">Username:</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Password:</label>
                <input name="password" type="password" class="form-control" id="field2">
                <small class="form-text text-muted">Never share your password</small>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name">
            </div>

            <div class="form-group">
                <label for="avatar">Choose a profile picture:</label>
                <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg">
            </div>

            <div class="form-group">
                <p>Sex:</p>
                <input type="radio" id="male" name="sex" value="male">
                <label for="male">Male</label><br>
                <input type="radio" id="female" name="sex" value="female">
                <label for="female">Female</label><br>
            </div>
            <div class="form-group">
                <label for="initialWeight">Your weight in kg:</label>
                <input type="number" name="initialWeight">
            </div>

            <div class="form-group">
                <label for="targetWeight">Your target weight in kg:</label>
                <input type="number" name="targetWeight">
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Sign up</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>Do you have an account? <a href="/login">Log in!</a></p>
    </div>
</div>