<form action="/registry/new" method="POST">


    <h2>Create new food log</h2>

    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" id="date" name="date">
    </div>

    <div class="form-group">
        <label for="owner"></label>
        <p value="{{user._id}}">{{name}}</p>
    </div>

    {{!-- ESTE ULTIMO INPUT SE TIENE QUE CAMBIAR O QUITAR --}}
    <div class="form-group">
        <label for="meal">meal</label>
        <input type="text" id="meal" name="meal">
    </div>


    <button type="submit" class="btn btn-dark btn-block btn-lg">Create log</button>

</form>