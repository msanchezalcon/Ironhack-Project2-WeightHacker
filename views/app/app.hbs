<div class="row justify-content-center">
    <div class="col-md-6">


        <form action="/app/search" method="POST" class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" name="searchTerm" placeholder="Search"
                aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>

            {{!-- {{#each }} --}}
            <img src={{photo.thumb}} />
            {{food_name}}
            {{serving_weight_grams}}gr
            {{nf_calories}}kcal
            {{!-- {{/each}} --}}



            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>


    </div>
</div>